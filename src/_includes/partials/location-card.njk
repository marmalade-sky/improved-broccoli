{% for localeType in locationCollection %}
  <div class="bg-white shadow-md rounded overflow-hidden">
    <div class="relative h-48 overflow-hidden md:h-auto">
      <a href="{{localeType.data.mapUrl}}" target="_blank">
        <img src="{{localeImgSrc}}{{localeType.data.img}}" alt="Location pictured: {{localeType.data.name}}">
      </a>
    </div>
    <div class="p-6">
      <div class="mb-4 space-y-2">
        <h3 class="text-3xl line-clamp-1">
          <a href="{{localeType.data.mapUrl}}" target="_blank">
            {{localeType.data.name}}
          </a>
        </h3>
        <div class="space-y-0">
          <p class="text-base text-gray-600">
            {{localeType.data.street}}
          </p>
          <p class="text-base text-gray-600">
            <span >{{localeType.data.city}}, </span>
            <span>{{localeType.data.state}} </span>
            <span>{{localeType.data.zip}}</span>
          </p>
        </div>
      </div>
      <a href="{{localeType.data.mapUrl}}" class="flex items-center space-x-2 text-cyan-500 group" target="_blank">
        <svg class="h-4 w-4 ease-in-out duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <span class="text-sm font-bold uppercase tracking-widest">Get Directions</span>
      </a>
    </div>
  </div>
{% endfor %}