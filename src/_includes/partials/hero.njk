{% for review in collections.highRated.slice(0,1) %}
  <div class="hero relative h-[80vh] flex items-center justify-end bg-black overflow-hidden bg-cover bg-center rendering-smooth" style="background-image: url({{imgSrc}}{{review.data.eyecatch}});">
  <div class="relative w-1/2 bg-black/50 rounded p-12 pr-24 space-y-5">
    <div class="space-y-3">
      <div class="flex items-center gap-2">
        <svg id="Heart_Svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 325 288.51" class="h-2">
          <g id="Heart_Group">
            <path d="M293.5,20.67c-75.95-56.48-123.01,19.12-130.99,33.46-7.99-14.33-55.04-89.93-131-33.46C6.16,39.52-34.96,122.15,56.52,197.91c21.97,18.19,67.64,49.89,91.47,73.72,4.84,4.56,9.47,9.79,13.7,15.68,.29,.4,.53,.81,.81,1.21,.28-.4,.53-.81,.81-1.21,4.24-5.9,8.88-11.14,13.73-15.71,23.84-23.83,69.48-55.51,91.44-73.69,91.48-75.75,50.36-158.39,25.01-177.24Z" class="fill-pink-500"/>
          </g>
        </svg>
        <small class="text-xs text-gray-200 uppercase tracking-widest">Latest Love</small>
      </div>
      <h1 class="text-6xl text-gray-200">
        {{review.data.beer}}
      </h1>
      <p class="text-base text-gray-200">
        <span>{{review.data.brewery}}</span> - 
        <span>{{review.data.breweryLocation}}</span>
      </p>
      {%- from 'macros/star-rating.njk' import rating %}
      {{ rating(review.data.rating) }} 
      <p class="text-lg text-gray-200">
        {{review.data.description}}
      </p>
      <ul class="flex gap-5 text-xs text-gray-200">
        {% for style in review.data.style %}
          <li>
            #{{style}}
          </li>
        {% endfor %}
      </ul>
    </div>
    <a href="{{review.url}}" class="btn group">
      <svg class="h-4 w-4 ease-in-out duration-300 -translate-x-1 group-hover:translate-x-0" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      <span>
        Read More
      </span>
    </a>
  </div>
</div>
{% endfor %}